<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cursos Online</title>
    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="stylesheet" href="~/css/skeleton.css">
    <link rel="stylesheet" href="~/css/custom.css">
    
    

</head>

<body>
    
    
    <header id="header" class="header">

        
         <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                
                
                <div class="two columns u-pull-left">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">MigracaoSiteCurso</a>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Cursos">Cursos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        

        <div class="container">
            <div class="row">
                <div class="four columns">
                    <img src="img/logo.jpg" id="logo">
                </div>
                
           
                
                <div class="two columns u-pull-right">
                    
                    <ul>
                        <li class="submenu">
                            <img src="img/medalha.png" id="img-carrinho" alt="Mais Vendidos">
                            <div id="carrinho" class="maisVendido">
                                <table id="lista-carrinho" class="u-full-width">
                                    <tbody id="maisVendidos">
                                    </tbody>
                                </table>
                            </div>
                        </li>
                        
                        <li class="submenu">
                            <img src="img/heart.png" id="img-carrinho">
                            <div id="carrinho" class="favorito">
                                <a href="#" id="limpar-carrinho" class="button u-full-width" onclick="limpaf();">Limpar
                                    Favorito</a>
                                <table id="lista-carrinho" class="u-full-width">
                                    <tbody id="corpoFavorito">
                                    </tbody>
                                </table>
                            </div>
                        </li>
                        <li class="submenu">
                            <img src="img/cartb.png" id="img-carrinho">
                            <div id="carrinho" class="carrim">
                                <div class="subtotalc">
                                    Subtotal (0 items): €0

                                </div>
                                <a href="#" id="limpar-carrinho" class="button u-full-width" onclick="checkout();">CheckOut</a>

                                <a href="#" id="limpar-carrinho" class="button u-full-width" onclick="limpa();">Esvaziar
                                    Carrinho</a>

                                <table id="lista-carrinho" class="u-full-width">
                                    <tbody id="corpoCarrinho" class="carri">
                                    </tbody>
                                </table>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </header>


    <div id="hero">
        <div class="container">
            <div class="row">
                <div class="six columns">
                    <div class="conteudo-hero">
                        <h2>Aprende algo novo</h2>
                        <p>Todos os cursos com Desconto!!!</p>
                        <form action="#" id="pesquisa" method="post" class="formulario">
                            <input class="u-full-width" type="text" placeholder="Que gostarias de aprender?"
                                id="buscador">
                            <input type="submit" id="submit-buscador" class="submit-buscador">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="barra">
        <div class="container">
            <div class="row">
                <div class="four columns icon icon1">
                    <p>20,000 Cursos online <br>
                        Explora os temas mais recentes</p>
                </div>
                <div class="four columns icon icon2">
                    <p>Formadores Experientes <br>
                        Aprende com estilo</p>
                </div>
                <div class="four columns icon icon3">
                    <p>Acesso vitalicio<br>
                        Aprende ao teu ritmo</p>
                </div>
            </div>
        </div>

    </div>

    <div id="lista-cursos" class="container">
        <h1 id="cabecalho" class="cabecalho">Cursos Online</h1>
        <div class="cursos">
            <div class="row">

                <div class="card" id="card">
                    @RenderBody()
                </div>

            </div>
        </div>
    </div>

    <div>
        <footer id="footer" class="footer">
            <div class="container">
                <div class="row">
                    <div class="four columns">
                        <nav id="principal" class="menu">
                            <a class="lnk" href="#">Para o teu Negócio</a>
                            <a class="lnk" href="#">Torna-te Formador</a>
                            <a class="lnk" href="#">Aplicações Móveis</a>
                            <a class="lnk" href="#">Suporte</a>
                            <a class="lnk" href="#">Temas</a>
                        </nav>
                    </div>
                    <div class="four columns">
                        <nav id="secundaria" class="menu">
                            <a class="lnk" href="#">Quem Somos?</a>
                            <a class="lnk" href="#">Ofertas de Emprego</a>
                            <a class="lnk" href="#">Blog</a>
                        </nav>
                    </div>
                </div>
            </div>
            <div class="container">
            &copy; 2022 - MigracaoSiteCurso - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </footer>
    </div>

<h6><a href=""></a></h6>
<i></i>
<dl></dl>

<td></td>
    
    <script src="~/js/tools.js" asp-append-version="true"></script>
    
    
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("css", required: false)
</body>
</html>